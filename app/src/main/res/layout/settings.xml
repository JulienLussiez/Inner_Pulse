<ScrollView android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:android="http://schemas.android.com/apk/res/android">

<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	>

	<LinearLayout
		android:id="@+id/linear7"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="8dp"
		android:orientation="horizontal"
		>

		<TextView
			android:id="@+id/metronome_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="Metronome"
			android:textColor="#008dcd"
			android:textSize="16sp" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/linear2"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="8dp"
		android:orientation="horizontal"
		>

		<TextView
			android:id="@+id/bpm_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="BPM"
			android:textSize="12sp"
			android:textColor="#000000"
			/>
		<TextView
			android:id="@+id/bpm"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="60"
			android:textSize="12sp"
			android:textColor="#000000"
			/>

		<EditText
			android:id="@+id/bpm_edit"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:textSize="12sp"
			android:textColor="#000000"
			android:hint="Edit Text"
			android:inputType="number"
			android:textColorHint="#607D8B"
			/>

	</LinearLayout>

    <LinearLayout
        android:id="@+id/linear5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/audible_beat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Audible Beats"
            android:textSize="12sp"
            android:textColor="#000000"
            />

		<TextView
			android:id="@+id/audible_beat"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="4"
			android:textColor="#000000"
			android:textSize="12sp" />

        <EditText
            android:id="@+id/audible_beat_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="12sp"
            android:textColor="#000000"
            android:hint="Edit Text"
			android:inputType="number"
            android:textColorHint="#607D8B"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/quiet_beat_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text="Quiet Beats"
            android:textSize="12sp"
            android:textColor="#000000"
            />

		<TextView
			android:id="@+id/quiet_beat"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="4"
			android:textColor="#000000"
			android:textSize="12sp" />

        <EditText
            android:id="@+id/quiet_beat_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:textSize="12sp"
            android:textColor="#000000"
            android:hint="Edit Text"
			android:inputType="number"
            android:textColorHint="#607D8B"
            />

    </LinearLayout>

	<LinearLayout
		android:id="@+id/linear9"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="8dp"
		android:orientation="horizontal"
		>

		<TextView
			android:id="@+id/repetition_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="Repetition(s)"
			android:textSize="12sp"
			android:textColor="#000000"
			/>

		<TextView
			android:id="@+id/repetition"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="1"
			android:textColor="#000000"
			android:textSize="12sp" />

		<EditText
			android:id="@+id/repetition_edit"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:textSize="12sp"
			android:textColor="#000000"
			android:hint="Edit Text"
			android:inputType="number"
			android:textColorHint="#607D8B"
			/>

	</LinearLayout>

	<LinearLayout
		android:id="@+id/linear3"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="8dp"
		android:orientation="horizontal"
		>
		<Switch
			android:id="@+id/im_switch"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="Interactive Feedbacks"
			android:textSize="12sp"
			android:textColor="#000000"
			/>
	</LinearLayout>

	<LinearLayout
		android:id="@+id/linear8"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:padding="8dp"
		android:orientation="horizontal"
		>

		<TextView
			android:id="@+id/info_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="Informations"
			android:textColor="#008dcd"
			android:textSize="16sp" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/linear4"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:padding="8dp">

		<TextView
			android:id="@+id/username_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="Username"
			android:textColor="#000000"
			android:textSize="12sp" />

		<TextView
			android:id="@+id/username"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:textColor="#000000"
			android:textSize="12sp" />

		<EditText
			android:id="@+id/username_edit"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:hint="Edit Text"
			android:padding="8dp"
			android:textColor="#000000"
			android:textColorHint="#607D8B"
			android:textSize="12sp" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/linear1"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:padding="8dp"
		android:visibility="invisible">

		<TextView
			android:id="@+id/latency_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="Mobile Latency (ms) "
			android:textColor="#000000"
			android:textSize="12sp" />

		<TextView
			android:id="@+id/latency"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="0"
			android:textColor="#000000"
			android:textSize="12sp" />

		<EditText
			android:id="@+id/latency_edit"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:hint="Edit Text"
			android:inputType="numberSigned"
			android:padding="8dp"
			android:singleLine="true"
			android:textColor="#000000"
			android:textColorHint="#607D8B"
			android:textSize="12sp" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/linear12"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:padding="8dp"
		android:visibility="gone">

		<TextView
			android:id="@+id/send_title_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="Send Data (Range)"
			android:textColor="#008dcd"
			android:textSize="16sp" />
	</LinearLayout>

	<LinearLayout
		android:id="@+id/linear10"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:padding="8dp"
		android:visibility="gone">

		<TextView
			android:id="@+id/send_start_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="Start"
			android:textColor="#000000"
			android:textSize="12sp" />

		<TextView
			android:id="@+id/send_start"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="0"
			android:textColor="#000000"
			android:textSize="12sp" />

		<EditText
			android:id="@+id/send_start_edit"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:hint="Edit Text"
			android:inputType="numberSigned"
			android:padding="8dp"
			android:singleLine="true"
			android:textColor="#000000"
			android:textColorHint="#607D8B"
			android:textSize="12sp" />

	</LinearLayout>

	<LinearLayout
		android:id="@+id/linear11"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		android:padding="8dp"
		android:visibility="gone">

		<TextView
			android:id="@+id/send_end_text"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="End"
			android:textColor="#000000"
			android:textSize="12sp" />

		<TextView
			android:id="@+id/send_end"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:padding="8dp"
			android:text="0"
			android:textColor="#000000"
			android:textSize="12sp" />

		<EditText
			android:id="@+id/send_end_edit"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:hint="Edit Text"
			android:inputType="numberSigned"
			android:padding="8dp"
			android:singleLine="true"
			android:textColor="#000000"
			android:textColorHint="#607D8B"
			android:textSize="12sp" />

	</LinearLayout>

</LinearLayout>
</ScrollView>